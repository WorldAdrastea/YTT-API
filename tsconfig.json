{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": "src",
        "outDir": "./dist",
        "types": ["node"],
        "typeRoots": [
            "node_modules/@types",
        ],
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}