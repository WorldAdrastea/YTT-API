{
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "baseUrl": "src",
        "outDir": "./dist",
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "types": ["node", "express", "mongoose", "lodash"],
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}